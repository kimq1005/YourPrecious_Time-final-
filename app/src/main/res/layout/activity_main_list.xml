<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainListActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upconstarintLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/maincolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/star"
            android:text="Hello"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/favroiteLinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleImageView">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:hint="등록된 즐겨찾기가 없습니다"
                android:textColor="@color/white" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/locationIconLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/favroiteLinearlayout">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="수원"
                android:textColor="#FDD835"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="지역변경"
                android:layout_marginEnd="10dp"
                android:textColor="#5A595C" />


        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationIconLinearLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/mainIconLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:gravity="center"
                android:background="@drawable/myrectangleicon_background"
                android:orientation="vertical"
                android:layout_width="110dp"
                android:layout_height="70dp">

                <ImageView
                    android:src="@drawable/whitesubway"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:text="지하철"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:background="@drawable/myrectangleicon_background"
                android:orientation="vertical"
                android:layout_width="110dp"
                android:layout_height="70dp">

                <ImageView
                    android:src="@drawable/whitesubway"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:text="버스"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:background="@drawable/myrectangleicon_background"
                android:orientation="vertical"
                android:layout_width="110dp"
                android:layout_height="70dp">

                <ImageView
                    android:src="@drawable/whitesubway"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:text="즐겨찾기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>





        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#F0F5FB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upconstarintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>