<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/maincolor"
    android:layout_height="90dp">

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/ovalcolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/ovalcolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:layout_marginStart="10dp"
        android:id="@+id/busicon"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_directions_bus_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="#18551B"
        android:id="@+id/Bus_Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="99"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/busicon"
        app:layout_constraintTop_toTopOf="@+id/busicon" />

    <TextView
        android:textSize="17sp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:id="@+id/gd"
        app:layout_constraintBottom_toBottomOf="@+id/Bus_Number"
        app:layout_constraintStart_toEndOf="@+id/Bus_Number"
        app:layout_constraintTop_toTopOf="@+id/Bus_Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Bus_Number"
        app:layout_constraintStart_toEndOf="@+id/busicon"
        android:id="@+id/restTimeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/waitTime"
            android:textColor="@color/white"
            android:text="55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:textColor="@color/white"
            android:text="분"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/restTimeLayout"
        app:layout_constraintStart_toEndOf="@+id/restTimeLayout">


        <TextView
            android:textColor="@color/white"
            android:id="@+id/waitBusNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 " />

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ovalcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>