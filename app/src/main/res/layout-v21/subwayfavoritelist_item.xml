<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android=
    "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/subcolor">


        <TextView
            android:id="@+id/Subway_Favorite_Name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="매탄권선"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:visibility="invisible"
            android:gravity="center"
            android:background="@drawable/line_bundang_background"
            android:id="@+id/Favorite_NodeID_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:text="수인\n분당"
            android:textColor="@color/white"
            android:textSize="7dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/Subway_Favorite_Name_TextView"
            app:layout_constraintTop_toTopOf="@+id/Subway_Favorite_Name_TextView"
            app:layout_constraintBottom_toBottomOf="@id/Subway_Favorite_Name_TextView"
            />

        <ImageView
            android:src="@drawable/trashicon"
            android:id="@+id/stardeletebtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textColor="#E53935"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>